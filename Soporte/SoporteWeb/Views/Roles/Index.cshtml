@model IEnumerable<SoporteWeb.Models.ApplicationUser>
@{
    ViewBag.Title = "Roles";
}
<div class="Muerdes">
    <br />
    <br />
    <br />
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card py-2 mt-5">
                <div class="card-header m-1 bg-dark">
                    <h4 class="text-center text-light">Lista de Usuarios</h4>

                </div>
                <div class="card-body">
                    <table class="table table-hover table-sm">
                        <tr>
                            <td>Item</td>
                            <td>UserName</td>
                            <td>Email</td>
                            <td>Seleccionar Rol</td>

                        </tr>
                        @{ 
                            int count = 1;
                        }
                        @foreach (var item in Model)
                         {
                              <tr>
                              <td></td>
                              <td>@item.UserName</td>
                              <td>@item.Email</td>
                              <td><a href="@Url.Action("AddRoles","Roles",new{id=item.Id})"><i class="fas fa-plus"></i></a></td>
                             </tr>
                            count++;
                        }
                        </table>
                </div>
            </div>

        </div>
    </div>

</div>

