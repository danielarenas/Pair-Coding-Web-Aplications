@model IEnumerable<SoporteWeb.Models.Tipo>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de Servicios</h2>

<p class="mt-3">
    <a href="@Url.Action("Create","Tipoes")" class="btn btn-sm bg-dark text-white" ><i class="fas fa-plus"></i>Tipo</a>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Tipoes", new { id = item.Id })" title="Editar"><i class="far fa-edit text-warning"></i></a>
            <a href="@Url.Action("Details", "Tipoes", new { id = item.Id })" title="Ver"><i class="fas fa-eye text-info"></i></a>
            <a href="@Url.Action("Delete", "Tipoes", new { id = item.Id })" title="Eliminar"><i class="fas fa-trash text-danger"></i></a>
        </td>
    </tr>
}

</table>
