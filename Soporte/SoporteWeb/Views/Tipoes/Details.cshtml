@model SoporteWeb.Models.Tipo

@{
    ViewBag.Title = "Details";
}
<div class="Muerdes">

    <br />
    <br />
    <br />
</div>
<div class="Comes">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="text-center mt-3">
        <h2><p class="text-white font-weight-bolder">Detalles</p></h2>

    </div>

    <div class="text-center mt-2">

        <dl class="dl-horizontal">
            <dt class="text-white font-weight-bolder">
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="text-white font-weight-bolder">
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">


                <div class="card-header">

                    Costos
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Usuario</th>
                                <th>Descripción</th>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Acciones</th> @*Acciones?*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Costos)
                            {
                                <tr>
                                    <th>@item.User</th>
                                    <th>@item.Description</th>
                                    <th>@item.DateTime</th>
                                    <th>@Model.Name</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p class="text-center">
                        @Html.ActionLink("Editar", "Edit", "Tipoes", new { id = Model.Id }, new { @class = "btn btn-dark" }) |
                        @Html.ActionLink("Regresar a la lista", "Index", "Tipoes", new { @class = "btn btn-dark" })
                    </p>
                </div>
            </div>

        </div>

    </div>
    <br />
