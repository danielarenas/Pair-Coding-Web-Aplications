
@model IEnumerable<SoporteWeb.Models.Costo>

@{
    ViewBag.Title = "Trabajos";
}




    <div class="text-center mt-3">
        <h2><p class="text-black font-weight-bolder">Trabajos</p></h2>
    </div>


<p class="mt-3 text-center">
    @if (User.IsInRole("Administrator"))
    {
        <a href="@Url.Action("Create","Costoes")" class="btn btn-sm bg-dark text-white"><i class="fas fa-plus"></i>Agregar</a>
    }

</p>


    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">



                <div class=" card-header">
                    Lista de Trabajos
                </div>

                <div class="card-body">
                    <table class="table">
                        <thead class="thead-dark">

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tipo.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>

                        </thead>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tipo.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Costoes", new { id = item.Id })" title="Editar"><i class="fas fa-file-alt text-warning"></i></a>
                                    <a href="@Url.Action("Details", "Costoes", new { id = item.Id })" title="Ver"><i class="fas fa-eye text-info"></i></a>
                                    <a href="@Url.Action("Delete", "Costoes", new { id = item.Id })" title="Eliminar"><i class="fas fa-times-circle text-danger"></i></a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>

            </div>

        </div>
    </div>



